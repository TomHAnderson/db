<script>
$(function() {

    $('form#performer').attr('id', 'performer<?= $id; ?>');
    $('form#performer<?= $id; ?>').on('submit', function(event) {

        $.ajax({
            url: '/performer/create',
            type: $(this).attr('method'),
            data: $(this).serialize(),
            span: $(this).closest('span'),
            success: function(data) {
                if (data) {
                    $(this.span).html(data);
                } else {
                    $(this.span).modal('hide');
                }
            }
        });

        return false;
    });
});

</script>