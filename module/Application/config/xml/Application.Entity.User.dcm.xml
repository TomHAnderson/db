<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Entity\User" table="auth_user">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="username" type="string" length="32" nullable="true"/>
    <field name="password" type="string" length="32" nullable="true"/>
    <field name="perms" type="string" nullable="true"/>
    <field name="email" type="string" length="100" nullable="true"/>
    <field name="name" type="string" length="100" nullable="true"/>
    <field name="css" type="text" nullable="true"/>
  </entity>
</doctrine-mapping>
