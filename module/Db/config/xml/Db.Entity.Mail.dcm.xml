<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\Mail">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="note" type="text" nullable="false"/>
    <field name="status" type="string" nullable="true"/>
    <many-to-one field="from" target-entity="Db\Entity\User" inversed-by="sentEmail">
      <join-columns>
        <join-column name="fromUser_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="to" target-entity="Db\Entity\User" inversed-by="receivedEmail">
      <join-columns>
        <join-column name="toUser_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
