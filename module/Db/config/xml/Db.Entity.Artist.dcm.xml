<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\Artist">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" nullable="false"/>
    <field name="nameNormalized" type="string" nullable="false"/>
    <field name="note" type="text" nullable="true"/>
    <one-to-many field="shows" target-entity="Db\Entity\Show" mapped-by="artist"/>
    <one-to-many field="links" target-entity="Db\Entity\ArtistLink" mapped-by="artist"/>
    <one-to-many field="aliases" target-entity="Db\Entity\Alias" mapped-by="artist"/>
    <many-to-many field="groups" target-entity="Db\Entity\ArtistGroup" mapped-by="artists"/>
  </entity>
</doctrine-mapping>
