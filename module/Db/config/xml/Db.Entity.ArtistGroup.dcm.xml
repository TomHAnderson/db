<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\ArtistGroup">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" nullable="true"/>
    <field name="note" type="text" nullable="false"/>
    <many-to-many field="artists" target-entity="Db\Entity\Artist" inversed-by="groups">
      <join-table name="ArtistGroupArtist">
        <join-columns>
          <join-column name="ArtistGroup_id" referenced-column-name="id" nullable="false"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="Artist_id" referenced-column-name="id" nullable="false"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="users" target-entity="Db\Entity\User" mapped-by="groups"/>
  </entity>
</doctrine-mapping>
