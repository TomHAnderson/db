<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\State">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" nullable="false"/>
    <field name="abbrev" type="string" nullable="true"/>
    <many-to-one field="country" target-entity="Db\Entity\Country" inversed-by="states">
      <join-columns>
        <join-column name="Country_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="cities" target-entity="Db\Entity\Place" mapped-by="state"/>
  </entity>
</doctrine-mapping>
