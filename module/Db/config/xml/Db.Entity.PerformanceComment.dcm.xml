<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\PerformanceComment" extends="AbstractComment">
    <many-to-one field="performance" target-entity="Db\Entity\Performance" inversed-by="comments" fetch="EAGER">
      <join-columns>
        <join-column name="performance_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
