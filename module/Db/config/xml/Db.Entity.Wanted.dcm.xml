<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\Wanted" repository-class="Db\Repository\Wanted">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <many-to-one field="user" target-entity="Db\Entity\User" inversed-by="wantedBy">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="source" target-entity="Db\Entity\Source" inversed-by="wantedBy">
      <join-columns>
        <join-column name="source_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="performance" target-entity="Db\Entity\Performance" inversed-by="wantedBy">
      <join-columns>
        <join-column name="show_id" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
